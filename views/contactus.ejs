<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>تماس با ما</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
  <style>
    @font-face {
      font-family: 'vazir';
      src: url('/css/Vazir-Bold.ttf');
    }

    body {
      background-color: #121212;
      color: white;
      font-family: 'vazir';
    }

    .form-control,
    .form-control:focus {
      background-color: #1e1e1e;
      color: white;
      border-color: #3fc1c9;
    }

    .form-label {
      color: #e0e0e0;
    }

    .form-control::placeholder {
      color: white;
    }

    .btn-custom {
      background-color: #3fc1c9;
      color: black;
      font-weight: bold;
    }

    .btn-custom:hover {
      background-color: #28a2a8;
      color: white;
    }

    .contact-box {
      background-color: #1c1c1c;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(63, 193, 201, 0.3);
    }

    h2 {
      color: aquamarine;
    }
  </style>
</head>

<body>
  <%- include('partials/navbar') %>

    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="contact-box">
            <h2 class="text-center mb-4"><i class="bi bi-telephone-fill"></i> تماس با ما</h2>
            <form id="contactForm">
              <div class="mb-3">
                <label for="name" class="form-label">نام شما</label>
                <input type="text" class="form-control" id="name" placeholder="مثلاً علی رضایی" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">ایمیل</label>
                <input type="email" class="form-control" id="email" placeholder="example@email.com" required>
              </div>
              <div class="mb-3">
                <label for="subject" class="form-label">موضوع</label>
                <input type="text" class="form-control" id="subject" placeholder="موضوع پیام شما" required>
              </div>
              <div class="mb-3">
                <label for="message" class="form-label">متن پیام</label>
                <textarea class="form-control" id="message" rows="4" placeholder="متن خود را اینجا بنویسید..."
                  required></textarea>
              </div>
              <input type="checkbox" name="" id="ihaveacc"> <span>من در سایت ثبت نام کردم </span>
              <div class="d-grid my-2">
                <button type="submit" class="btn btn-custom">ارسال پیام</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.getElementById("contactForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const data = {
          name: document.getElementById("name").value.trim(),
          email: document.getElementById("email").value.trim(),
          subject: document.getElementById("subject").value.trim(),
          message: document.getElementById("message").value.trim(),
          isRegistered: document.getElementById("ihaveacc").checked
        };

        try {
          const response = await fetch("/contactus/create", {
            method: "POST",
            headers: {
              "Content-Type": "application/json"
            },
            body: JSON.stringify(data)
          });

          const result = await response.json();

          if (response.ok) {
            alert(result.message);
            // فرم رو ریست کن
            document.getElementById("contactForm").reset();
          } else {
            alert("❌ ارسال پیام با خطا مواجه شد: " + (result.message || "خطای ناشناخته"));
          }
        } catch (error) {
          console.error("خطا:", error);
          alert("❌ ارتباط با سرور برقرار نشد.");
        }
      });
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>