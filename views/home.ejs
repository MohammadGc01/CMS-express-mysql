                        <a href="#" target="_blank" class="">
                            <img src="http://localhost:3000/images/ads1" alt="تبلیغ ۲" class="img-fluid" />
                        </a>
                    </div>
                    <div class="swiper-slide">
                        <a href="#" target="_blank" class="">
                            <img src="http://localhost:3000/images/ad" alt="تبلیغ ۲" class="img-fluid" />
                        </a>
                    </div>
