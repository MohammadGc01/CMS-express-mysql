<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title>پنل کاربری</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    @font-face {
      font-family: 'vazir';
      src: url('/css/Vazir-Bold.ttf');
    }
    body {
      font-family: 'vazir';
      background-color: #121212;
      color: #fff;
    }
    .sidebar {
      height: 100vh;
      background-color: #1f1f1f;
      padding: 20px;
      position: sticky;
      top: 0;
    }
    .sidebar a {
      display: block;
      padding: 10px 15px;
      color: #ddd;
      margin-bottom: 10px;
      border-radius: 6px;
      text-decoration: none;
    }
    .sidebar a:hover, .sidebar a.active {
      background-color: #0d6efd;
      color: white;
    }
    .profile-box {
      text-align: center;
      margin-bottom: 30px;
    }
    .profile-box img {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      margin-bottom: 10px;
    }
    .card-dark {
      background-color: #2a2a2a;
      border: none;
      border-radius: 10px;
    }
    .section-title {
      margin: 30px 0 15px;
      border-bottom: 1px solid #444;
      padding-bottom: 5px;
    }
    .logout-btn {
      margin-top: 30px;
    }
  </style>
</head>

<body>
<div class="container-fluid">
  <div class="row">

    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 sidebar">
      <div class="profile-box">
        <img src="/images/user.jpg" alt="پروفایل" id="user_prof">
        <h6><%= user.username %></h6>
        <p style="font-size: 13px;"><%= user.email %></p>
      </div>

      <a href="#" class="active"><i class="bi bi-speedometer2"></i> داشبورد</a>
      <a href="#" id="SettingTemplateBtn" onclick="changeSection('SettingTemplate')" ><i class="bi bi-gear"></i> تنظیمات حساب</a>
      <a href="#"><i class="bi bi-chat-dots"></i> پیام‌ها</a>
      <a href="#"><i class="bi bi-heart"></i> پست‌های لایک شده</a>
      <a href="#"><i class="bi bi-chat-left-text"></i> کامنت‌ها</a>
      <a href="http://localhost:3000/user/logout" class="logout-btn text-danger"><i class="bi bi-box-arrow-right"></i> خروج</a>

      <select name="" id="">
        <option value="">داشبورد یوزر</option>
      </select>
    </div>

    <!-- Main Content -->
    <div class="col-md-9 col-lg-10 p-4" id="MainContent">
    
      <template id="SettingTemplate">
        <div class="container">
       <form id="Update_Profile_form">
        <input type="file" id="Profile_img">
        <input type="submit" value="ذخیره">
       </form>
        </div>
      </template>

    </div>

  </div>
</div>
<script>
 
  function bindForm(){
      document.getElementById('Update_Profile_form').addEventListener('submit', async (event) => {
    const img = document.getElementById('Profile_img').value

    const result = await fetch('http://localhost:3000/user/update/profile', {
      method : "POST",
      body : img
    })

    const data = await result.json()
    console.log(data);
    

  })
  }


  function changeSection(sectionid) {
      const template = document.getElementById(sectionid);
        const btn = document.getElementById(`${sectionid}Btn`);

      const menuitem = document.querySelectorAll('.sidebar a')
      menuitem.forEach(item => item.classList.remove('active'))
      btn.classList.add('active')
      document.getElementById('MainContent').innerHTML = template.innerHTML;

      bindForm()
  }
</script>
</body>
</html>
